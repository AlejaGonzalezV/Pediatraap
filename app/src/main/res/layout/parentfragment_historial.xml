<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pediatrapp.fragments.ParentFragment_Historial">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="419dp"
        android:layout_height="131dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondolistas" />

    <TextView
        android:id="@+id/tv_historial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/lato_bold"
        android:text="Historial"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

    <Button
        android:id="@+id/vacunasGeneralBTN"
        android:layout_width="384dp"
        android:layout_height="71dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="#00FFFFFF"
        android:drawableLeft="@drawable/ic_local_hospital_black_24dp"
        android:drawableRight="@drawable/ver"
        android:fontFamily="@font/lato_bold"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="15dp"
        android:stateListAnimator="@null"
        android:text="Vacunas"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#3E8AF8"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_historial" />

    <Button
        android:id="@+id/curvasGeneralBTN"
        android:layout_width="384dp"
        android:layout_height="71dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#00FFFFFF"
        android:drawableLeft="@drawable/curvaicon"
        android:drawableRight="@drawable/ver"
        android:fontFamily="@font/lato_bold"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="15dp"
        android:text="Curvas de crecimiento"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#3E8AF8"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@+id/vacunasGeneralBTN" />

    <Button
        android:id="@+id/historiaClinica"
        android:layout_width="384dp"
        android:layout_height="71dp"
        android:layout_marginTop="88dp"
        android:backgroundTint="#00FFFFFF"
        android:drawableLeft="@drawable/historia_clinica"
        android:drawableRight="@drawable/ver"
        android:fontFamily="@font/lato_bold"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="15dp"
        android:stateListAnimator="@null"
        android:text="Historia clÃ­nica"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#3E8AF8"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vacunasGeneralBTN" />

</androidx.constraintlayout.widget.ConstraintLayout>
