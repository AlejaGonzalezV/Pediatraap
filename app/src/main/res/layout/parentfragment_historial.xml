<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pediatrapp.fragments.ParentFragment_Historial">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="419dp"
        android:layout_height="131dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondolistas" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/lato_bold"
        android:text="Historiales"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8"  />

    <Button
        android:id="@+id/vacunasGeneralBTN"
        android:layout_width="328dp"
        android:layout_height="66dp"

        android:layout_marginEnd="40dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="@font/lato_bold"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="15dp"
        android:text="Vacunas"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#3E8AF8"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/curvasGeneralBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.962" />

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="64dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/vaccine_1"
        app:layout_constraintBottom_toBottomOf="@+id/vacunasGeneralBTN"
        app:layout_constraintStart_toStartOf="@+id/vacunasGeneralBTN"
        app:layout_constraintTop_toTopOf="@+id/vacunasGeneralBTN" />

    <Button
        android:id="@+id/curvasGeneralBTN"
        android:layout_width="326dp"
        android:layout_height="79dp"

        android:layout_marginEnd="40dp"
        android:layout_marginBottom="372dp"
        android:backgroundTint="#00FFFFFF"
        android:drawableLeft="@drawable/curva"
        android:fontFamily="@font/lato_bold"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="15dp"
        android:text="Curvas de crecimiento"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#3E8AF8"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
