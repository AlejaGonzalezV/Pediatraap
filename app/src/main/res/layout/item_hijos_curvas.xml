<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="410dp"
        android:layout_height="136dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageHijoCurvas"
            android:layout_width="95dp"
            android:layout_height="102dp"
            android:layout_marginStart="44dp"
            android:src="@drawable/ic_launcher_background"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nombreHijoCurvas"
            android:layout_width="210dp"
            android:layout_height="38dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="44dp"
            android:fontFamily="@font/lato_bold"
            android:text="Nombre Hijo"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/edadHijoCurvas"
            android:layout_width="119dp"
            android:layout_height="37dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="52dp"
            android:fontFamily="@font/lato_bold"
            android:text="TextView"
            android:textColor="#2F80ED"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/verCurvas"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageHijoCurvas"
            app:layout_constraintTop_toBottomOf="@+id/nombreHijoCurvas"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/verCurvas"
            android:layout_width="67dp"
            android:layout_height="27dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="16dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/lato_bold"
            android:stateListAnimator="@null"
            android:text="Ver"
            android:textColor="#2F80ED"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>