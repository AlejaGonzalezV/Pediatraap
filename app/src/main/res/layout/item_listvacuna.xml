<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_nameVaccine"
        android:layout_width="196dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:text="Nombre de la Vacuna"
        android:textAlignment="textStart"
        android:textColor="#2F80ED"
        android:textSize="18sp"
        android:fontFamily="@font/lato_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/fechaItemVacuna"
        android:layout_width="110dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato_bold"
        android:text="Fecha"
        android:textAlignment="center"
        android:textColor="#2F80ED"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tv_nameVaccine"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/verListaVa"
        android:layout_width="34dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/lato_bold"
        android:stateListAnimator="@null"
        android:text="Ver"
        android:textColor="#2F80ED"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/fechaItemVacuna"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>